
.skills.about-col.about-col_right
	svg(class="about__triangle" viewBox="0 0 1000 110" preserveAspectRatio="none")
		polygon(points="0,110 1000,110 1000,0")
	h2.skills__title Чем я могу быть вам полезна
	.skills__text
	ul.skills__list
		each skill in skills
			li.skills__item
				h3.skills-group__title= skill.title
				ul.skills-group__list
					each skillsgroup, ndx in skill.skillsGroup
						- var strokeLength = 80 * 3.14 * `${skillsgroup[1]}`
						li.skills-group__item
							svg.skills-group__circle
								circle(cx="50" cy="50" r="40").skills-group__circle-under
								circle(cx="50" cy="50" r="40" transform="rotate(-90 50 50)" data-stroke-dasharray= `${strokeLength} 251.2` stroke-dasharray= `${strokeLength} 251.2`).skills-group__circle-above
							.skills-group__name= skillsgroup[0]

